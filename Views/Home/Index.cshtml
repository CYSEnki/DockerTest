                y: (Math.random() - 0.5) * 4
            });
        }

        // 記錄原本位置
        const originalPositions = [];

        function arrangeChars() {
            let left = window.innerWidth / 2 - container.offsetWidth / 2;
            chars.forEach(char => {
                char.style.left = `${left}px`;
                char.style.top = `${window.innerHeight / 2}px`;
                originalPositions.push({ left, top: window.innerHeight / 2 });
                left += char.offsetWidth;
            });
        }

        function moveChars() {
            const w = window.innerWidth;
            const h = window.innerHeight;
            chars.forEach((char, i) => {
                let x = parseFloat(char.style.left);
                let y = parseFloat(char.style.top);

                x += velocities[i].x;
                y += velocities[i].y;

                if (x <= 0 || x + char.offsetWidth >= w) velocities[i].x *= -1;
                if (y <= 0 || y + char.offsetHeight >= h) velocities[i].y *= -1;

                char.style.left = `${x}px`;
                char.style.top = `${y}px`;
            });
